<%= render 'shared/page_header', title: 'Job Applications' %>

<div class="row">
  <div class="col-12">
    <%= paginate @job_applications %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <table class="table">
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Email</th>
          <th>Applied for</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @job_applications.each do |ja| %>
          <tr>
            <td><%= ja.full_name %></td>
            <td><%= mail_to ja.email %></td>
            <td><%= link_to ja.job_ad.name, job_ad_path(ja.job_ad) %></td>
            <td><%= link_to "Details", job_application_path(ja) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
