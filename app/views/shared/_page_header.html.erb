<div class="row">
    <div class="col-12">
      <div class="bg-primary text-light rounded p-5 my-5">
        <header>
          <h1><%= title %></h1>
        </header>

        <aside>
          <% if local_assigns[:company_name] %>
            <h3><%= company_name %></h3>
          <% end %>
          <% if local_assigns[:company_email] %>
            <p><%= mail_to company_email, company_email, class: "text-dark" %></p>
          <% end %>
          <% if local_assigns[:deadline] %>
            <p class="text-dark">
              <%= image_tag "time.svg", class: 'mr-2', width: 18, height: 18 %>
              <%= deadline.strftime("%-d.%-m.%Y.") %>
            </p>
          <% end %>
        </aside>
      </div>
    </div>
  </div>
